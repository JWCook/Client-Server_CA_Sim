<Window x:Class="CASimClient.GridResizeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Util;assembly="
    Title="Resize Grid" Height="130" Width="190" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Height="Auto" Width="Auto">
        <local:NumBox Height="23" HorizontalAlignment="Left" Margin="87,6,0,0" x:Name="xInputBox" VerticalAlignment="Top" Width="75" />
        <local:NumBox Height="23" HorizontalAlignment="Left" Margin="87,35,0,0" x:Name="yInputBox" VerticalAlignment="Top" Width="75" />
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Name="okButton" IsDefault="True" Margin="6,0,0,6" VerticalAlignment="Bottom" Width="75" Click="ok"/>
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Name="cancelButton" IsCancel="True" VerticalAlignment="Bottom" Width="75" Margin="87,0,0,6" />
        <Label Content="Width:" Height="23" HorizontalAlignment="Left" Margin="6,6,0,0" Name="xLabel" VerticalAlignment="Top" Width="75" />
        <Label Content="Height:" Height="23" HorizontalAlignment="Left" Margin="6,35,0,0" Name="yLabel" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
