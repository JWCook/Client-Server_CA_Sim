<Window x:Class="CASimClient.EditFramerateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Util;assembly="
        Title="Edit Framerate" Height="135" Width="188" ResizeMode="NoResize">
    <Grid>
        <Label Content="Frames per second:" Height="23" HorizontalAlignment="Left" Margin="8,12,0,0" Name="label1" VerticalAlignment="Top" Width="108" />
        <local:NumBox Height="23" HorizontalAlignment="Left" Margin="112,12,0,0" x:Name="framerateInputBox" VerticalAlignment="Top" Width="32" />
        <CheckBox Content="Enable Frame Skipping" Height="16" HorizontalAlignment="Left" Margin="12,43,0,0" Name="frameSkipCheckbox" VerticalAlignment="Top" FlowDirection="RightToLeft" />
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Name="okButton" IsDefault="True" Margin="6,0,0,6" VerticalAlignment="Bottom" Width="75" Click="ok"/>
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Name="cancelButton" IsCancel="True" VerticalAlignment="Bottom" Width="75" Margin="87,0,0,6" />
    </Grid>
</Window>
